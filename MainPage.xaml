<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMauiApp.MainPage">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <!-- Label that says Hello, MAUI -->
        <Label Text="Hello, MAUI!" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <!-- Entry field -->
        <Entry x:Name="entryField" 
               Placeholder="Enter text here" 
               HorizontalOptions="Center" />

        <!-- Button to update the label -->
        <Button Text="Update Label" 
                Clicked="OnUpdateLabelClicked" 
                HorizontalOptions="Center" />

        <!-- Label to display updated text -->
        <Label x:Name="updatedLabel" 
               FontSize="18" 
               HorizontalOptions="Center" />

        <!-- Button to navigate to AboutPage -->
        <Button Text="Go to About Page" 
                Clicked="OnNavigateButtonClicked" 
                HorizontalOptions="Center" />

    </StackLayout>
</ContentPage>
